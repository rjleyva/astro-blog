{
  "name": "astro-blog",
  "author": "RJ Leyva",
  "description": "RJ Leyva's Astro TS Blog Built with Bun",
  "license": "MIT",
  "type": "module",
  "private": true,
  "scripts": {
    "dev": "bunx --bun astro dev",
    "build": "astro check && bunx --bun astro check",
    "preview": "bunx --bun astro preview",
    "format": "bunx --bun prettier --write .",
    "lint": "bunx --bun eslint .",
    "astro": "astro"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "prettier": "^3.5.3",
    "prettier-plugin-astro": "^0.14.1"
  },
  "peerDependencies": {
    "typescript": "^5.8.2"
  },
  "dependencies": {
    "astro": "^5.5.2"
  }
}
